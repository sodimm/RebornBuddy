    <CodeChunk Name="UseStealth"><![CDATA[
			SpellData data;
			if (!Core.Me.HasAura("Stealth") && ActionManager.CurrentActions.TryGetValue("Stealth", out data) && ActionManager.CanCast(data, Core.Me))
